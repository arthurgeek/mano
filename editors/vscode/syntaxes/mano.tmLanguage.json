{
  "scopeName": "source.mano",
  "patterns": [
    { "include": "#comments" },
    { "include": "#function-declaration" },
    { "include": "#function-call" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.mano",
          "match": "//.*$"
        },
        {
          "name": "comment.block.mano",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            { "include": "#block-comment" }
          ]
        }
      ]
    },
    "block-comment": {
      "name": "comment.block.mano",
      "begin": "/\\*",
      "end": "\\*/",
      "patterns": [
        { "include": "#block-comment" }
      ]
    },
    "function-declaration": {
      "match": "\\b(olhaEssaFita)\\s+([\\p{L}\\p{Emoji}_][\\p{L}\\p{N}\\p{Emoji}_]*)\\s*\\(",
      "captures": {
        "1": { "name": "keyword.other.function.mano" },
        "2": { "name": "entity.name.function.mano" }
      }
    },
    "function-call": {
      "match": "\\b([\\p{L}\\p{Emoji}_][\\p{L}\\p{N}\\p{Emoji}_]*)\\s*\\(",
      "captures": {
        "1": { "name": "entity.name.function.call.mano" }
      }
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mano",
          "match": "\\b(sePá|vacilou|segueOFluxo|seVira|saiFora|toma)\\b"
        },
        {
          "name": "keyword.other.function.mano",
          "match": "\\b(olhaEssaFita)\\b"
        },
        {
          "name": "keyword.other.class.mano",
          "match": "\\b(bagulho)\\b"
        },
        {
          "name": "variable.language.this.mano",
          "match": "\\b(oCara)\\b"
        },
        {
          "name": "variable.language.super.mano",
          "match": "\\b(mestre)\\b"
        },
        {
          "name": "keyword.other.mano",
          "match": "\\b(salve|oiSumida|seLiga|tamoJunto|ow)\\b"
        },
        {
          "name": "constant.language.mano",
          "match": "\\b(firmeza|treta|nadaNão)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.mano",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.mano",
          "match": "\\\\."
        },
        {
          "name": "constant.character.escape.mano",
          "match": "\\{\\{"
        },
        {
          "name": "meta.embedded.expression.mano",
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.section.embedded.begin.mano" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.embedded.end.mano" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#function-call" },
            { "include": "#keywords" },
            { "include": "#strings" },
            { "include": "#numbers" }
          ]
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.mano",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    }
  }
}
