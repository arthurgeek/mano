{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup: Install mano extension (symlink)",
      "type": "shell",
      "command": "rm -rf ~/.vscode/extensions/mano.mano-lang-0.1.0 && ln -s ${workspaceFolder}/editors/vscode ~/.vscode/extensions/mano.mano-lang-0.1.0",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build: mano-lsp (release)",
      "type": "cargo",
      "command": "build",
      "args": ["--release", "-p", "mano-lsp"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Build: VS Code extension",
      "type": "shell",
      "command": "npm run compile",
      "options": {
        "cwd": "${workspaceFolder}/editors/vscode"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Setup: Full dev environment",
      "dependsOn": [
        "Build: mano-lsp (release)",
        "Build: VS Code extension",
        "Setup: Install mano extension (symlink)"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}
